@model EditRentalViewModel

@{
    ViewBag.Title = "Rent a Vehicle";
}


<section class="vh-100" style="background-color: #eee;">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>

                                <form class="mx-1 mx-md-4" asp-controller="Rental" asp-action="Edit" method="post" enctype="multipart/form-data">
                                    <div asp-validation-summary="All" class="text-danger"></div>                                                                                                                                              
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label asp-for="Pickup" class="form-label">Pickup Date/Time</label>
                                            <input asp-for="Pickup" id="form3Example4c" class="form-control" />
                                            <span asp-validation-for="Pickup" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label asp-for="pickupLocation" class="form-label">Pickup Location</label>
                                            <input asp-for="pickupLocation" id="form3Example4c" class="form-control" />
                                            <span asp-validation-for="pickupLocation" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label asp-for="Dropoff" class="form-label">Drop Date/Time</label>
                                            <input asp-for="Dropoff" id="form3Example4c" class="form-control" />
                                            <span asp-validation-for="Dropoff" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label asp-for="DropoffLocation" class="form-label">Drop Location Location</label>
                                            <input asp-for="DropoffLocation" id="form3Example4c" class="form-control" />
                                            <span asp-validation-for="DropoffLocation" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <button type="Submit" class="btn btn-primary  btn-lg">Update Details</button>
                                    </div>
                                </form>
                            </div>
                           
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>