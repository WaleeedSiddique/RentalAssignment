@model IEnumerable<ApplicationUser>
   <div class="container">    
       <div class="heading text-center">Welcome to dashboard</div>
    <div class="row">       
                 <div style="background-color:lightgrey;" class="col-3 admin-con d-flex justify-content-between align-items-center text-dark p-5">
                     <div>
                <i style="font-size:10rem;" class="fa fa-user fa-lg"></i>
                     </div>
                     <div>
                         Total Users<br />
                         @Model.Count()
                     </div>
                 </div>
        <div style="background-color:lightgrey;" class="col-3 ml-5 d-flex justify-content-between align-items-center text-dark p-3">
            <div>
                <i style="font-size:10rem;" class="fa fa-user fa-lg"></i>
            </div>
            <div class="text-success">
                Approved Users<br />
                @Model.Where(x => x.IsApproved == true).Count()
            </div>

        </div>
        <div style="background-color:lightgrey;" class="col-3  ml-5  d-flex justify-content-between align-items-center text-dark p-3">
            <div>
                <i style="font-size:10rem;" class="fa fa-user fa-lg"></i>
            </div>
            <div class="text-danger">
                UnApproved Users<br />
                @Model.Where(x => x.IsApproved != true).Count()
            </div>
        </div>

    </div>
   </div>
