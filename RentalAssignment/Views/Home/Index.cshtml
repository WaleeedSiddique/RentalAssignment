@model IEnumerable<Vehicle>
    @{
    ViewData["Title"] = "Home Page";

    }
    <div class="container-fluid">
        <div class="row">
           @using(@Html.BeginForm("Index","Home",FormMethod.Post)){
            <div class="form-horizontal">
                <div class="form-group">
                    <div class="col-md-6">
                        @Html.TextBox("SearchText",null,new{@class="form-control"})
                    </div>
                    <div class="col-md-2">
                        <button class="btn btn-primary" type="submit">Submit</button>
                    </div>
                </div>
            </div>

        }
    </div>
        </div>

<div class="container my-5">
    <div class="row">
        @foreach (var vehicle in Model)
        {
            var photoPath = "~/images/" + (vehicle.Photopath ?? "noimage.jpg");
            <div class="col-md-4 mb-5">
                <div class="item">
                    <div class="car-wrap rounded ftco-animate">
                        <div class="img rounded d-flex align-items-end">
                            <img class="image" src="@photoPath" asp-append-version="true">
                        </div>
                        <div class="text">
                            <h2 class="mb-0"><a href="#">@vehicle.VehicleModel</a></h2>
                            <div class="d-flex mb-3">
                                <span class="cat">@vehicle.OwnerName</span>
                                <p class="price ml-auto">$500 <span>/day</span></p>
                            </div>
                            <p class="d-flex mb-0 d-block">
                                <a asp-controller="Rental" asp-action="Vehicle" asp-route-id="@vehicle.VehicleId" style="background-color:#000;color:#fff" class="btn   py-2 mr-1">BOOK NOW</a>
                                <a asp-controller="Home" asp-action="Details" asp-route-id="@vehicle.VehicleId" style="background-color:#17a2b8;" class="btn  py-2 ml-1">DETAILS</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>


        }
    </div>
</div>



