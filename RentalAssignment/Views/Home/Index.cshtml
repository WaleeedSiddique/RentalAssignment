<div class="container bg-white pt-3 px-lg-5">
    <form asp-controller="Home" asp-action="SearchPage" method="post">
        <div class="row mx-n2">
            <div class="col-xl-4 col-lg-4 col-md-6 px-2">
                 <label class="text-black">Pickup Date</label>
                <div class="date mb-3">
                    <input required type="date" name="pickup" data-date-format="DD MM YYYY" class="form-control p-4" placeholder="Pickup Date" />
                </div>
            </div>
            <div class="col-xl-4 col-lg-4 col-md-6 px-2">
                <label class="text-black">DropOff Date</label>
                <div class="time mb-3">
                    <input required type="date" name="dropoff" data-date-format="DD MM YYYY" class="form-control p-4" placeholder="Pickup Time" />
                </div>
            </div>

            <div class="col-xl-2 col-lg-4 col-md-6 px-2 mt-5">
                <button class="btn btn-primary btn-block mb-3 mt-2" type="submit" style="height: 50px;background-color:#2b2e4a!important; color:white;border:none;">Search</button>
            </div>
        </div>
    </form>
</div>

