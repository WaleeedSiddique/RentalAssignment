@using RentalAssignment.Enums
@using RentalAssignment.ViewModels
@model EditVehicleViewModel

@{
    ViewBag.Title = "Edit Vehicle Details";
}
<form asp-controller="Home" asp-action="Edit" method="post" class="form-group" enctype="multipart/form-data">
    <input hidden asp-for="VehicleId" />
    <div class="container-fluid pb-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <h2 class="mb-4">Personal Details</h2>
                    <div class="mb-5">
                        <div class="row">

                            <div class="col-6 form-group">
                                <input asp-for="OwnerName" class="form-control p-4" placeholder="Owner Name" required="required">
                            </div>
                            <div class="col-6 form-group">
                                <input asp-for="OwnerPhone" class="form-control p-4" placeholder="Owner Phone" required="required">
                            </div>
                        </div>
                    </div>
                    <h2 class="mb-4">Car Details</h2>
                    <div class="mb-5">
                        <div class="row">
                            <div class="col-6 form-group">
                                <input asp-for="VehicleModel" class="form-control p-4" placeholder="Car Make" required="required">
                            </div>
                            <div class="col-6 form-group">
                                <label asp-for="VehicleType">Select Type</label>
                                <select class="form-control" asp-for="VehicleType" asp-items="Html.GetEnumSelectList<VehicleType>()">
                                    <option>Please Select</option>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6 form-group">
                                <input asp-for="VehicleNumberPlate" class="form-control" placeholder="Vehicle Plate" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6 form-group">
                                <label asp-for="VehicleColour">Select Color</label>
                                <select class="form-control" asp-for="VehicleColour" asp-items="Html.GetEnumSelectList<VehicleColour>()">
                                    <option>Please Select</option>
                                </select>
                            </div>
                            <div class="col-6 form-group">
                                <input asp-for="ChassisNumber" class="form-control p-4" placeholder="Chassis Number" required="required">
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-6 form-group">
                                <input asp-for="sittingCapacity" class="form-control p-4" placeholder="Sitting Capacity" required="required">
                            </div>

                        </div>
                        <div class="row">                           
                            <div class="col-6 form-group">
                                <input asp-for="RentPerDay" class="form-control p-4" placeholder="Rent Per Day" required="required">
                            </div>
                        </div>
                    </div>
    <div>
                        <button class="btn btn-dark" asp-action="Edit" asp-controller="Home">Update Changes</button>
        <button class="btn btn-danger" asp-action="Index" >Cancel</button>
    </div>



</form>