@using RentalAssignment.Enums
@using RentalAssignment.ViewModels
@model VehicleCreateViewModel

@{
    ViewBag.Title = "Add Vehicle";
}
<form asp-controller="Home" asp-action="Create" method="post" class="form-group" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="OwnerName">Owner Name</label>
        <input asp-for="OwnerName" class="form-control" placeholder="Owned By" />
    </div>
    <div class="form-group">
        <label asp-for="VehicleModel">Vehicle Model</label>
        <input asp-for="VehicleModel" class="form-control" placeholder="Model" />
    </div>
    <div class="form-group">
        <label asp-for="VehicleType">Vehicle Type</label>
        <select class="form-select" asp-for="VehicleType" asp-items="Html.GetEnumSelectList<VehicleType>()">
            <option>Please Select</option>
        </select>
        <span asp-validation-for="VehicleType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="VehicleNumberPlate">Vehicle Number Plate</label>
        <input asp-for="VehicleNumberPlate" class="form-control" placeholder="License Plate Number" />
        <span asp-validation-for="VehicleNumberPlate" class="text-danger"></span>
        
    </div>
    <div class="form-group">
        <label asp-for="ChassisNumber">Chassis Number</label>
        <input asp-for="ChassisNumber" class="form-control" placeholder="Engine Number" />
        <span asp-validation-for="ChassisNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Photo"></label>
        <input asp-for="Photo" class="form-control" />
        <span asp-validation-for="Photo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="VehicleColour">Vehicle Colour</label>
        <input asp-for="VehicleColour" class="form-control" placeholder="Colour" />
    </div>
    <div class="form-group">
        <label asp-for="OwnerPhone">Owner Phone</label>
        <input asp-for="OwnerPhone" class="form-control" placeholder="Colour" />
    </div>

    <div>
        <button class="btn btn-primary" type="submit">Add Vehicle</button>
    </div>



</form>