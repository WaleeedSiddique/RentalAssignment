@model List<VehicleCategory>

<h2>All Categories</h2>
<a asp-action="Create" class="btn btn-primary">Add New Category</a>
<table class="table table-striped mt-2">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Category Name</th>           
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>       
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryName</td>           
                <td>
                    <a asp-controller="Category" asp-action="EditCategory" asp-route-id="@category.CategoryId" class="btn btn-sm btn-primary">Edit</a>
                </td>
                <td>
                    <a asp-controller="Category" asp-action="DeleteCategory" asp-route-id="@category.CategoryId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@if (Model.Count() < 1)
{
    <h5 class="text-success text-center">No Categories Currently</h5>
}
