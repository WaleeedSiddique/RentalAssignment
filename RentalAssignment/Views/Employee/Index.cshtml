@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid">
    <h4 class="text-center">Our Employees</h4>
</div>

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <td>Employee Name</td>
                <td>Employee Father Name</td>
                <td>Employee CNIC</td>
                <td>Employee Occupation</td>
                <td>Employee Age</td>
                <td>Employee Experience</td>
                <td>Vehicle Details</td>
                <td>Edit Vehicle Details</td>
                <td>Delete Vehicle</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {

                <tr>
                    <td>@employee.EmployeeName</td>
                    <td>@employee.EmployeeFatherName</td>
                    <td>@employee.EmployeeCNIC</td>
                    <td>@employee.EmployeeOccupation</td>
                    <td>@employee.EmployeeAge</td>
                    <td>@employee.EmployeeExperience</td>
                    <td><a asp-controller="Employee" asp-action="Details" asp-route-id="@employee.EmployeeId" class="btn btn-primary">View</a></td>
                    <td><a asp-controller="Employee" asp-action="Edit" asp-route-id="@employee.EmployeeId" class="btn btn-info">Edit</a></td>
                    <td><a asp-controller="Employee" asp-action="Delete" asp-route-id="@employee.EmployeeId" class="btn btn-danger">Delete</a></td>

                </tr>
            }
        </tbody>

    </table>

</div>
