@model Employee

@{
    ViewBag.Title = "Add Employee";
}
<h1 class="text-center">Add Employee</h1>
<form asp-controller="Employee" asp-action="Create" method="post" class="form-group">
    <div class="form-group">
        <label asp-for="EmployeeName">Employee Name</label>
        <input asp-for="EmployeeName" class="form-control" placeholder="Name" />
    </div>
    <div class="form-group">
        <label asp-for="EmployeeFatherName">Employee Father Name</label>
        <input asp-for="EmployeeFatherName" class="form-control" placeholder="Father Name" />
    </div>
    <div class="form-group">
        <label asp-for="EmployeeCNIC">Employee CNIC</</label>
        <input asp-for="EmployeeCNIC" class="form-control" placeholder="CNIC Number" />
        <span asp-validation-for="EmployeeCNIC" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EmployeeAge">Employee Age</label>
        <input asp-for="EmployeeAge" class="form-control" placeholder="Age" />
        <span asp-validation-for="EmployeeAge" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EmployeeExperience">Employee Experience</label>
        <input asp-for="EmployeeExperience" class="form-control" placeholder="Experience" />
    </div>
     <div class="form-group">
        <label asp-for="EmployeeOccupation"> Employee Occupation </label>
        <input asp-for="EmployeeOccupation" class="form-control" placeholder="Occupation" />
    </div>
    <div>
        <button class="btn btn-primary" type="submit">Add Employee</button>
    </div>



</form>