@model Employee

@{
    ViewBag.Title = "Edit Employee Details";
}
<form asp-controller="Employee" asp-action="Edit" method="put" class="form-group">
    <input hidden asp-for="EmployeeId" />
    <div class="form-group">
        <label asp-for="EmployeeName"></label>
        <input asp-for="EmployeeName" class="form-control" placeholder="Name" />
    </div>
    <div class="form-group">
        <label asp-for="EmployeeFatherName"></label>
        <input asp-for="EmployeeFatherName" class="form-control" placeholder="Father Name" />
    </div>
    <div class="form-group">
        <label asp-for="EmployeeCNIC"></label>
        <input asp-for="EmployeeCNIC" class="form-control" placeholder="CNIC Number" />
        <span asp-validation-for="EmployeeCNIC" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EmployeeAge"></label>
        <input asp-for="EmployeeAge" class="form-control" placeholder="Age" />
        <span asp-validation-for="EmployeeAge" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EmployeeExperience"></label>
        <input asp-for="EmployeeExperience" class="form-control" placeholder="Experience" />
    </div>
    <div class="form-group">
        <label asp-for="EmployeeOccupation"></label>
        <input asp-for="EmployeeOccupation" class="form-control" placeholder="Occupation" />
    </div>
    <div>
        <button class="btn btn-primary" type="submit">Update Changes</button>
        <button class="btn btn-primary" asp-controller="Employee" asp-action="Index">Cancel</button>
    </div>



</form>