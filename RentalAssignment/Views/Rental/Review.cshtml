@inject SignInManager<ApplicationUser> signInManager;
@model ReviewViewModel
@{
    ViewData["Title"] = "Review Page";
}
<h2>Leave a Review</h2>

<form asp-controller="Rental" asp-action="Review" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="rating">Rating:</label>
        <input asp-for="Rating" class="form-control" id="rating" name="rating" required>
    </div>
    <div class="form-group">
        <label for="">Comment:</label>
        <textarea class="form-control" asp-for="Comment" id="comment" name="comment" rows="4" required></textarea>
    </div>
    <div class="form-group">
        <label asp-for="@signInManager.Context.User.Identity.Name">Customer Name</label>
        <input asp-for="@signInManager.Context.User.Identity.Name" class="form-control" readonly>
    </div>
    <input type="hidden" asp-for="rental.RentalID" />

    <button type="submit" class="btn btn-primary">Submit</button>
</form>