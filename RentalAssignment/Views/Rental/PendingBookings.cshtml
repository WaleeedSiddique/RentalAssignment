@model IEnumerable<Rental>
@{
    ViewBag.Title = "Pending Bookings";
}
<table class="table">
    <thead class="thead-dark">
    <tr>
        <th>Name</th>
        <th>Phone</th>
        <th>Email</th>
        <th>Vehicle</th>
        <th>Booking Date</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>
    </thead>
    <tbody>
        @foreach(var booking in Model)
        {
        <tr>
            <td>@booking.RentalName</td>
            <td>@booking.RentalPhone</td>
            <td>@booking.RentalEmail</td>
            <td>@booking.vehicle.VehicleModel</td>
            <td>@booking.Pickup</td>
                <td><a class="btn btn-secondary" asp-controller="Rental" asp-action="ConfirmBooking" asp-route-id="@booking.RentalID">Update Booking</a></td>
            <td><a class="btn btn-danger" asp-controller="Rental" asp-action="DeleteBooking" asp-route-id="@booking.RentalID">Delete Booking</a></td>
        </tr>
        }
    </tbody>
</table>
@if (Model.Count() < 1)
{
    <h5 class="text-success text-center">No Confimed Or Pending Bookings </h5>
}